{% extends 'base.html.twig' %}

{% block title %}Etape index{% endblock %}

{% block body %}
    <h1>Etape index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Niveau</th>
                <th>Imageproduitobtenu</th>
                <th>Elementsortie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etape in etapes %}
            <tr>
                <td>{{ etape.id }}</td>
                <td>{{ etape.nom }}</td>
                <td>{{ etape.description }}</td>
                <td>{{ etape.niveau }}</td>
                <td>{{ etape.imageproduitobtenu }}</td>
                <td>{{ etape.elementsortie }}</td>
                <td>
                    <a href="{{ path('etape_show', {'id': etape.id}) }}">show</a>
                    <a href="{{ path('etape_edit', {'id': etape.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('etape_new') }}">Create new</a>
{% endblock %}
